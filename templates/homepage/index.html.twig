{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col">
            {% for article in articles %}
                <div class="row mb-3 mt-3 pb-3 pt-3 divBlog">
                    <h1>{{ article.name }}</h1>
                    <span class="spanTimeBlog"><i>{{ article.getCreatedAtAsString }}</i></span>
                    <div class="row">
                        <div class="col-md-6">
                            <img class="imageBlog" src="\images\{{ article.img}}">
                        </div>
                        <div class="col-md-6">
                            {{ article.body|trans|nl2br }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
